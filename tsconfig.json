{
	"compileOnSave": true,
	"compilerOptions": {
		"baseUrl": ".",
        "experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"outDir": "./dist",
		"declaration": true,
		"removeComments": false,
		"noImplicitAny": true,
        "strictNullChecks": true,
        "allowJs": true,
		"esModuleInterop": true,
        "lib": [
            "es6",
			"es2015",
			"es2016",
            "es2018.promise"
        ],
		"module": "CommonJS",
		"target": "es2015",
		"types": ["node", "jest"],
		"resolveJsonModule": true
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}
